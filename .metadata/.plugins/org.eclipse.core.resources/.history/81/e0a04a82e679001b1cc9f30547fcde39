package hiding;

public class MyDate {
	private int day;
	private int month;
	private int year;
	boolean isValid = true;
	
	public MyDate(int day, int month, int year) {
		setYear(year);
		setMonth(month);
		setDay(day);
	}
	
	public int getDay() {
		return day;
	}
	public int getMonth() {
		return month;
	}
	public int getYear() {
		return year;
	}
	
	public void setDay(int day) {
		switch(month)
			case 1 : case 3: case 5: case 7: case 8: case 10: case 12:
				if(day<1 || day>31) {
				this.isValid = false;
				}else
					this.day = day;
				}
	
	
	
	
	
}
